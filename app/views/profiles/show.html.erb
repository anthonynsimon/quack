<div class="container m-y-2 text-xs-center">
    <%= image_tag get_user_avatar_url_for(@user, :medium), class: 'avatar-frame m-y-1', width: '120' %>
          
    <h4><%= @user.user_name %></h4>
    
    <p class="small text-muted">
      <%= pluralize @user.posts.count, 'post' %>
    </p>
    
    <%= content_tag :p, @user.bio, class: 'text-muted' %>
    
    <% if @user == current_user %>
      <%= link_to 'Edit Profile', edit_profile_path(@user.user_name), class: 'btn btn-secondary-outline btn-sm' %>
    <% end %>
</div>

<hr class="m-y-1">

<% if @user.posts.count == 0 %>
  <p class="text-xs-center text-muted">You haven't quacked anything yet :(</p>
<% else %>
  <div id="posts">
    <%= render partial: 'posts/post', collection: @user.posts.order(:created_at).reverse_order %>
  </div>
<% end %>