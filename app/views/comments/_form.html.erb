<% if current_user.nil? %>
    <%= link_to 'Add a comment...', new_user_session_path, class: "form-control form-control-sm" %>
<% else %>
  <%= form_for([post, comment], remote: true) do |f| %>
    <%= f.text_field :body, class: "form-control form-control-sm", placeholder: 'Add a comment...', autocomplete: :off %>
  <% end %>
<% end %>