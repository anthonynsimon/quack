<div class="form-wrapper soft-shadow bg-rounded-box">

  <h2 class="text-xs-center text-muted">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, hidden: true %><br />
      <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail', autofocus: true %>
    </div>

    <div class="actions m-y-1">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-warning btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
