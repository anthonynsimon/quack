<div class="form-wrapper">

  <h2 class="text-xs-center text-muted">Sign up, it's free</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field">
      <%= f.label :user_name, 'Username', hidden: true %><br />
      <%= f.text_field :user_name, class: 'form-control ', placeholder: 'Username', autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, hidden: true %><br />
      <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>
    </div>

    <div class="field">
      <%= f.label :password, hidden: true %><br />
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, hidden: true %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Repeat your password', autocomplete: "off" %>
    </div>

    <div class="actions m-y-1">
      <%= f.submit "Sign up", class: 'btn btn-warning form-control' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
