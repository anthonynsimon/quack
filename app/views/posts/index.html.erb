<div class="row m-y-1">
  <div class="col-md-8 col-md-offset-2">
  
    <%= form_for(Post.new, remote: true) do |f| %>
      <%= f.text_field :message, class: 'form-control', placeholder: 'What\'s quacking?',
          autocomplete: :off, autofocus: true %>
    <% end %>
  
    <hr class="m-y-2">

  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  
    <div id="posts">
      <%= render 'posts', posts: @posts %>
    </div>
    
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  
    <div id="paginator" class="m-y-3 text-xs-center">
        <%= link_to_next_page @posts, 'LOAD MORE', remote: true, id: 'load_more', class: 'btn btn-primary-outline btn-block' %>
    </div>
  
  </div>
</div>