<p id="notice"><%= notice %></p>

<%= form_for(Post.new, remote: true) do |f| %>
  <div class="field">
    <%= f.text_field :message %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br>

<div id="posts">
  <%= render partial: 'post', collection: @posts.order(:created_at).reverse_order %>
</div>

