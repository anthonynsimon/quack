<div class="btn-group">
  <button class="btn btn-warning-outline btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-inbox" aria-hidden="true"></i>
    <%= unread_notifications.count %>
  </button>
  
  <div class="dropdown-menu">
    <h6 class="dropdown-header">Recent quacks</h6>
    
    <%= render unread_notifications.order('created_at DESC').last(7) %>
    
    <div class="dropdown-divider"></div>
    
    <% if unread_notifications.count == 0 %>
      <p class="text-muted small text-xs-center">You've caught up for now</p>
    <% end %>
  </div>
</div>