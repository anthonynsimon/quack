<div class="dropdown">

  <span class="dropdown-toggle label label-warning label-pill"  id="notificationsDropdown" data-toggle="dropdown">
    <%= unread_notifications.count %>
  </span>
  
  <div class="dropdown-menu dropdown-menu-right">
    <h6 class="dropdown-header">Recent quacks</h6>
    
    <%= render unread_notifications.order('created_at DESC').last(7) %>
    
    <div class="dropdown-divider"></div>
    
    <% if unread_notifications.count == 0 %>
      <p class="text-muted small text-xs-center">You've caught up for now</p>
    <% end %>
    
  </div>
</div>